[MASTER]
# Python code to execute, usually for sys.path manipulation
init-hook='import sys; sys.path.append("src")'

# Files or directories to be skipped
ignore=venv,.venv,__pycache__,.pytest_cache,.mypy_cache,build,dist

# Use multiple processes to speed up Pylint
jobs=4

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name (for single char variables)
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    W0511,  # fixme (TODO, FIXME)
    C0301,  # line-too-long (handled by black)
    C0330,  # bad-continuation (handled by black)

[REPORTS]
# Output format
output-format=colorized

# Include message's id in output
include-ids=yes

# Reports
reports=yes

[BASIC]
# Good variable names
good-names=i,j,k,x,y,z,f,e,id,db,pk,_

# Naming style
argument-naming-style=snake_case
attr-naming-style=snake_case
class-naming-style=PascalCase
const-naming-style=UPPER_CASE
function-naming-style=snake_case
method-naming-style=snake_case
module-naming-style=snake_case
variable-naming-style=snake_case

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# Maximum number of lines in a module
max-module-lines=1000

[DESIGN]
# Maximum number of arguments for function/method
max-args=8

# Maximum number of attributes for a class
max-attributes=10

# Minimum number of public methods for a class
min-public-methods=1

# Maximum number of public methods for a class
max-public-methods=25

[IMPORTS]
# Allow wildcard imports from typing
allow-wildcard-with-all=yes

[TYPECHECK]
# List of members which are set dynamically
generated-members=

# Ignore missing imports
ignored-modules=

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=6

# Ignore imports when computing similarities
ignore-imports=yes
